{
  "name": "playwright-mcp-framework",
  "version": "1.0.0",
  "description": "Advanced UI automation framework using Playwright with MCP server integration",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:e2e": "npx playwright test tests/e2e",
    "test:search": "npx playwright test tests/e2e/search-functionality.spec.js",
    "test:ecommerce": "npx playwright test tests/e2e/ecommerce-tests.spec.js",
    "test:forms": "npx playwright test tests/e2e/form-testing.spec.js",
    "test:finance": "npx playwright test tests/e2e/finance-e2e.spec.js",
    "test:performance": "npx playwright test tests/e2e/performance-accessibility.spec.js",
    "test:api": "npx playwright test tests/e2e/api-integration.spec.js",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "setup": "npm install && npx playwright install",
    "report": "npx playwright show-report",
    "ci:test": "npx playwright test --reporter=github",
    "test:parallel": "npx playwright test --workers=4",
    "test:chrome": "npx playwright test --project=chromium",
    "test:firefox": "npx playwright test --project=firefox",
    "test:webkit": "npx playwright test --project=webkit"
  },
  "keywords": [
    "playwright",
    "mcp",
    "automation",
    "testing",
    "e2e",
    "visual-testing",
    "performance"
  ],
  "author": "Sushrut Holey <sshroot23cs@users.noreply.github.com>",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "allure-playwright": "^2.10.0",
    "dotenv": "^16.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.0",
    "moment": "^2.29.0"
  }
}